<div class="home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://metrouk2.files.wordpress.com/2015/05/ad_169222367.jpg?quality=90&strip=all&zoom=1&resize=644%2C483');">
  <div class="home__content">
    <div class="home__logo">
      <%= cl_image_tag("flats/bin.png", height: 100 , width: 70, crop: :fill) %>
    </div>
    <h1 class="home__title">Trashbnb</h1>
    <p class="home__details">Find the shittiest places.</p>
    <form class="home__form form" action="/flats">
      <input class="form-control" type="text" name="location" id="location" placeholder="Location" value="">

      <input class="form-control" id="date" name="check_in" type="date" placeholder="Check-in" value="<%= Date.today %>" >
      <input class="form-control" id="date" name="check_out" type="date" placeholder="Checkout" value="<%= Date.today %>">
      <select class="form-control" name="os" value="1">
         <option value="1">super trash</option>
         <option value="2">trash</option>
         <option value="3">the trashiest</option>
      </select>
      <input type="submit" name="submit" class="btn btn-danger" value="Search">
    </form>
  </div>
</div>

<script>
  jQuery(function() {
    return $('#location').autocomplete({
      source: [
        <% @flats.each do |flat| %>
          '<%= flat.address %>',
        <% end %>
      ]
    });
  });
</script>






