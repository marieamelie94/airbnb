<div class="navbar-wagon">
  <!-- Logo -->
  <% user = current_user %>
  <a href="/" class="navbar-wagon-brand">
    <%= cl_image_tag("flats/bin.png", height: 30 , width: 20, crop: :fill) %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <%= link_to 'Offer a flat', new_flat_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Manage Bookings', user_bookings_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %>

      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link") %>
      <%= link_to cl_image_tag("flats/#{current_user.photo}.jpg",
              height: 50, width: 50, crop: :fill, radius: 50, class: 'user-img'), flats_path(@user) %>

    <% else %>
      <%= link_to 'Log in', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Sign in', new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><a href="#">Log Out</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

